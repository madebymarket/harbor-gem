  c.syntax = 'harbor upload, [options]'
  c.summary = ''
  c.description = ''
  c.example 'description', 'command example'
  c.option '--some-switch', 'Some switch that does something'
  c.action do |args, options|
    # Do something or c.when_called Harbor::Commands::Upload,
  end
end

command :logout do |c|
  c.syntax = 'harbor logout [options]'
  c.summary = ''
  c.description = ''
  c.example 'description', 'command example'
  c.option '--some-switch', 'Some switch that does something'
  c.action do |args, options|
    # Do something or c.when_called Harbor::Commands::Logout
  end
end

